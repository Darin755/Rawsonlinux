#!/bin/bash
sudo apt install xfce4 xfce4-goodies lightdm variety gnome-games cmatrix cowsay xcowsay fortune vlc xfdashboard ubuntu-software clamtk clamav libreoffice firefox wmctrl docky update-notifier thunderbird
cp config.zip $HOME
cd
unzip config.zip
sudo cp -r .config /etc/skel/
sudo cp -r .gconf /etc/skel/
cd RawsonlinuxScripts
chmod +x *
sudo cp * /usr/bin 
cd
cd lightdm.conf.d
sudo cp * /usr/share/lightdm/lightdm.conf.d
cd
rm config.zip
rm -r -f RawsonlinuxScripts
rm -r -f lightdm.conf.d
exit 0
