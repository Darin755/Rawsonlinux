#!/bin/bash
echo installing packages
sudo apt install xfce4 xfce4-goodies lightdm variety gnome-games cmatrix cowsay xcowsay ubiquity-frontend-gtk fortune vlc xfdashboard ubuntu-software clamtk clamav clamav-daemon libreoffice firefox update-notifier thunderbird gnome-disk-utility virtualenv espeak unzip python python3 python3-pip

echo copying configuration files...
cp config.zip $HOME
cd
unzip config.zip
echo creating default user
sudo cp -r -f .config /etc/skel/
sudo cp -r -f .bashrc /etc/skel/
sudo cp /etc/skel/* /ust/share/lightdm/guest-session/skel
cd RawsonlinuxScripts
chmod +x *
sudo cp * /usr/bin
cd
echo configuring lightdm
cd lightdm.conf.d
sudo cp * /usr/share/lightdm/lightdm.conf.d
cd

echo installing Jarvis

cd /home
sudo git clone https://github.com/sukeesh/Jarvis.git
cd Jarvis
echo running installer..
echo select 4 then 1
sudo python3 installer
sudo cp $HOME/open.py /home/Jarvis/jarviscli/plugins
sudo cp $HOME/VistWebsite.py /home/Jarvis/jarviscli/plugins
sudo rm -f /home/Jarvis/jarviscli/plugins/OpenWebsite.py
sudo chmod -R +rwx /home/Jarvis/jarviscli/packages/memory
sudo chmod -R +rwx /home/Jarvis/custom
cd

echo cleaning up...
sudo rm config.zip
sudo rm open.py
sudo rm VisitWebsite.py
sudo rm -r -f RawsonlinuxScripts
sudo rm -r -f lightdm.conf.d
exit 0
