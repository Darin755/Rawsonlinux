#!/bin/bash
echo installing packages
sudo apt install xfce4 xfce4-goodies lightdm variety gnome-games cmatrix cowsay xcowsay ubiquity-frontend-gtk fortune vlc xfdashboard ubuntu-software clamtk clamav clamav-daemon libreoffice firefox update-notifier thunderbird gnome-disk-utility virtualenv espeak unzip

echo copying configuration files...
cp config.zip $HOME
cd
unzip config.zip
echo creating default user
sudo cp -r -f .config /etc/skel/
sudo cp -r -f .bashrc /etc/skel/
sudo cp /etc/skel/* /ust/share/lightdm/guest-session/skel
cd RawsonlinuxScripts
chmod +x *
sudo cp * /usr/bin
cd
echo configuring lightdm
cd lightdm.conf.d
sudo cp * /usr/share/lightdm/lightdm.conf.d
cd

echo installing Jarvis

cd /home
sudo git clone https://github.com/Darin755/Jarvis.git
cd Jarvis
sudo rm -r -f .git

cd
sudo cp jarvis /usr/local/bin 

echo cleaning up...
sudo rm config.zip
sudo rm jarvis
sudo rm -r -f RawsonlinuxScripts
sudo rm -r -f lightdm.conf.d
exit 0
