#!/bin/bash
echo installing packages
sudo apt install cheese wmctrl xfce4 xfce4-goodies lightdm variety supertuxkart cmatrix cowsay xcowsay fortune vlc xfdashboard ubuntu-software clamtk clamav clamav-daemon libreoffice firefox update-notifier thunderbird gnome-disk-utility virtualenv espeak unzip python3 python3-pip policykit-1-gnome gnome-screensaver libasound-dev portaudio19-dev libportaudio2 libportaudiocpp0

echo copying configuration files...
cp config.zip $HOME
cd
unzip config.zip
echo creating default user
sudo cp -r -f .config /etc/skel/
sudo cp -r -f .bashrc /etc/skel/
sudo cp -r -f /etc/skel/* /ust/share/lightdm/guest-session/skel
cd Rawsonlinux
cd RawsonlinuxScripts
chmod +x *
sudo cp -f -r * /usr/bin
cd
echo configuring lightdm
cd lightdm.conf.d
sudo cp -r -f * /usr/share/lightdm/lightdm.conf.d
cd

echo installing Jarvis

cd /usr/share
sudo git clone https://github.com/sukeesh/Jarvis.git
cd Jarvis
echo running installer..
echo select 2 then 1
sudo python3 installer
sudo cp -f -r $HOME/open.py /usr/share/Jarvis/jarviscli/plugins
sudo cp -f -r $HOME/VistWebsite.py /usr/share/Jarvis/jarviscli/plugins
sudo rm -f /usr/share/Jarvis/jarviscli/plugins/OpenWebsite.py
sudo chmod -R +rwx /usr/share/Jarvis/jarviscli/packages/memory
sudo chmod -R +rwx /usr/share/Jarvis/custom
cd

echo cleaning up...
sudo rm -f config.zip
sudo rm -f open.py
sudo rm -f VisitWebsite.py
sudo rm -r -f lightdm.conf.d
exit 0
