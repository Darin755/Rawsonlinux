#!/bin/bash
echo installing packedges
sudo apt install xfce4 xfce4-goodies lightdm variety gnome-games cmatrix cowsay xcowsay fortune vlc xfdashboard ubuntu-software clamtk clamav clamav-daemon libreoffice firefox update-notifier thunderbird gnome-disk-utility virtualenv espeak tar

echo copying configuration files...
cp config.tar.xz $HOME
cd
tar -xf config.tar.xz
echo creating default user
sudo cp -r -f .config /etc/skel/
sudo cp -r -f .bashrc /etc/skel/
sudo cp /etc/skel/* /ust/share/lightdm/guest-session/skel
cd RawsonlinuxScripts
chmod +x *
sudo cp * /usr/bin
cd
echo configuring lightdm
cd lightdm.conf.d
sudo cp * /usr/share/lightdm/lightdm.conf.d
cd

echo installing Jarvis

sudo cp Jarvis.tar.xz /home
cd /home
sudo tar -xf Jarvis.tar.xz
sudo rm /home Jarvis.tar.xz
cd
sudo cp jarvis /usr/local/bin 

echo cleaning up...
sudo rm config.tar.xz
sudo rm jarvis
sudo rm Jarvis.tar.xz
sudo rm -r -f RawsonlinuxScripts
sudo rm -r -f lightdm.conf.d
exit 0
