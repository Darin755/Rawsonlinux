#!/bin/bash
apt install xfce4 xfce4-goodies lightdm variety gnome-games cmatrix vlc xfdashboard ubuntu-software clamtk clamav libreoffice firefox wmctrl docky update-notifier thunderbird
cp config.zip $HOME
cd
unzip config.zip
cd RawsonlinuxScripts 
cp * /bin/ 
cd
cd lightdm.conf.d
rm *
cp * /usr/share/lightdm/lightdm.conf.d
rm config.zip
rm -r -f RawsonlinuxScripts
exit 0
